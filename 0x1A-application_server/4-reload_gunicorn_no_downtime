#!/usr/bin/env bash
# Gracefully reloads Gunicorn.

# Get the process ID (PID) of the Gunicorn master process
PID=$(pgrep gunicorn)

if [ -z "$PID" ]; then
    echo "Gunicorn is not running."
    exit 1
fi

# Send the HUP signal to the Gunicorn master process
kill -HUP "$PID"

echo "Gunicorn reloaded gracefully."
